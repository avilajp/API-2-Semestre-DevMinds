<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>

<BorderPane fx:id="template" prefHeight="80.0" prefWidth="1024.0" style="-fx-background-color: #424874;" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="devminds.tgcontrol.apptg.ControllerTelaInicial">
    <center>
        <VBox prefHeight="75.0" prefWidth="1024.0" BorderPane.alignment="CENTER">
            <ButtonBar prefHeight="75.0" prefWidth="1003.0">
                <buttons>
                    <Button mnemonicParsing="false" onAction="#stageToMainScree" prefHeight="80.0" scaleX="1.1" stylesheets="@templateDesign.css" translateX="-55.0" translateY="1.0">
                        <graphic>
                            <ImageView fitHeight="75.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@icons/casa.png" />
                            </ImageView>
                        </graphic>
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                    </Button>
                    <Button mnemonicParsing="false" onAction="#stageToChangeTableView" prefHeight="80.0" scaleX="1.1" stylesheets="@templateDesign.css" translateX="-41.0">
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                        <graphic>
                            <ImageView fitHeight="75.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@icons/plus.png" />
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button fx:id="btn_search" mnemonicParsing="false" onAction="#stageToTelaVisualizar" prefHeight="80.0" scaleX="1.1" stylesheets="@templateDesign.css" translateX="-27.0">
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                        <graphic>
                            <ImageView fitHeight="75.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true">
                                <Image url="@icons/search-interface-symbol.png" />
                            </ImageView>
                        </graphic>
                    </Button>
                    <Button mnemonicParsing="false" onAction="#stageToRelatorio" prefHeight="80.0" prefWidth="232.0" scaleX="1.1" stylesheets="@templateDesign.css" translateX="-13.0">
                        <cursor>
                            <Cursor fx:constant="HAND" />
                        </cursor>
                        <graphic>
                            <ImageView fitHeight="75.0" fitWidth="70.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@icons/settings.png" />
                                </image>
                            </ImageView>
                        </graphic>
                    </Button>
                </buttons>
            </ButtonBar>
        </VBox>
    </center>
</BorderPane>
